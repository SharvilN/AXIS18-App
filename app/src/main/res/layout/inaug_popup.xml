<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/side_margin"
    android:background="@color/prehomebackd"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/circlebkd"
        android:gravity="center"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INAUGURATION"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"/>



    <EditText
        android:id="@+id/question_inaug"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="#11000000"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:hint="Enter any question you wish to ask in inauguration(Optional)"
        android:inputType="textMultiLine"/>


    <android.support.v7.widget.CardView
        android:id="@+id/popup_inaug_card"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="27dp"
        app:cardBackgroundColor="@color/reg_btn_bckd"
        app:cardElevation="@dimen/activity_vertical_margin"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="20sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>